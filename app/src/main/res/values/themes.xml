<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Branding Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/buttonHighlightPrimary</item>

        <!-- Background and Surface Colors -->
        <item name="android:windowBackground">@color/fragment1Background</item>
       <!-- <item name="colorBackground">@color/fragment1Background</item> -->
        <item name="colorSurface">@color/inputBox</item>

        <!-- Ripple and Control Colors -->
        <item name="android:colorControlHighlight">@color/buttonHighlightSecondary</item>
        <item name="android:colorControlActivated">@color/buttonHighlightPrimary</item>
        <item name="android:colorControlNormal">@color/grey</item>
       <!-- <item name="colorControlDisabled">@color/textSubdued</item> -->

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>

        <!-- Typography -->
        <item name="fontFamily">@font/poppins</item>
        <item name="textAppearanceHeadline1">@style/TextStyle.Headline</item>
        <item name="textAppearanceBody1">@style/TextStyle.Body</item>
        <item name="textAppearanceCaption">@style/TextStyle.Caption</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/inputBox</item>
        <item name="android:colorControlHighlight">@color/buttonHighlightSecondary</item>
        <item name="android:colorControlNormal">@color/grey</item>
        <!-- <item name="colorControlDisabled">@color/textSubdued</item> -->
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/fragment2Background</item>
        <item name="android:colorControlHighlight">@color/buttonHighlightPrimary</item>
        <item name="android:colorControlNormal">@color/white</item>
        <!-- <item name="colorControlDisabled">@color/textSubdued</item> -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/fragment1Background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>
