<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_primary">

    <!-- App details section -->
    <TextView
        android:id="@+id/tv_app_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:textStyle="normal"
        android:background="@color/inputBox"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="start"
        android:lineSpacingExtra="8dp" />

    <!-- Placeholder for future enhancements -->
    <Button
        android:id="@+id/btn_learn_more_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_details"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/whatsnew"
        android:backgroundTint="@color/buttonSecondary"
        android:textColor="@android:color/white" />
</RelativeLayout>
